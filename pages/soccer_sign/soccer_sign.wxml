<!--pages/soccer_sign/soccer_sign.wxml-->
<view>
  <view class='title'>
    <text>球员注册</text>
  </view>
  <view class='form'>
    <form bindsubmit="soccerSign" bindreset="formReset">
      <view class="i-cell i-input">
        <view class="i-cell-hd i-input-title">昵称</view>
         <input  value="{{username}}" placeholder="请输入您的昵称" bindinput="usernameInput" />
      </view>
      <view class="i-cell i-input">
        <view class="i-cell-hd i-input-title">真实姓名</view>
         <input  value="{{realname}}" placeholder="请输入您的真实姓名" bindinput="realnameInput" />
      </view>

      <view class="i-cell i-input">
        <view class="i-cell-hd i-input-title">生日</view>
        <picker mode="date" value="{{date}}" start="1970-01-01" end="2018-09-11" bindchange="bindDateChange">
          <view class="picker">
            {{date}}
          </view>
        </picker>
      </view>
      <view class="i-cell i-input">
        <view class="i-cell-hd i-input-title">常踢位置</view>
        <picker bindchange="bindPickerChange" value="{{position_list[position_index][0]}}" range="{{position_list}}">
          <view class="i-input-input i-cell-bd">
            {{position_list[position_index][1]}}
          </view>
        </picker>
      </view>
      <view class="button">
        <i-button bind:click="submit" type="info">确认</i-button>
      </view>

    </form>
  </view>
</view>